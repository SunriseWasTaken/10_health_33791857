<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/header') %>
</head>
<body>
  <%- include('partials/sidebar') %>
  
  <main class="main-content">
    <h1>My Workouts</h1>
    
    <div class="dashboard-grid">
      <div class="card card-large">
        <h2>Workout History</h2>
        <% if (typeof workouts !== 'undefined' && workouts && workouts.length > 0) { %>
          <ul class="workout-list">
            <% workouts.forEach(workout => { %>
              <li>
                <strong><%= workout.exercise %></strong>
                <span><%= workout.duration %> min</span>
                <small><%= workout.workout_date ? new Date(workout.workout_date).toLocaleDateString() : '' %></small>
                <% if (workout.notes) { %>
                  <br><em style="color: var(--muted); font-size: 0.9rem;"><%= workout.notes %></em>
                <% } %>
              </li>
            <% }); %>
          </ul>
        <% } else { %>
          <p>No workouts logged yet. <a href="/add-workout">Log your first workout!</a></p>
        <% } %>
      </div>
      
      <div class="card">
        <h2>Quick Actions</h2>
        <p style="text-align: left; margin-bottom: 20px;">Add a new workout to track your fitness progress.</p>
        <a href="/add-workout" class="btn" style="width: 100%; text-align: center; display: block;">Add New Workout</a>
      </div>
    </div>
  </main>
  
  <%- include('partials/footer') %>
</body>
</html>

